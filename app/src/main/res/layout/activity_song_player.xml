<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSongAvatar"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="48dp"
        app:cardCornerRadius="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSongAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Now Playing"
        app:layout_constraintTop_toBottomOf="@+id/cvSongAvatar"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtSongName"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cvSongAvatar"
        tools:text="Dil ka Dariya" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtSongArtist"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/purple_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtSongName"
        tools:text="Arijit Singh" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:backgroundTint="?android:attr/colorPressedHighlight"
        android:src="@drawable/ic_play"
        app:fabCustomSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSongArtist"
        app:maxImageSize="36dp" />

</androidx.constraintlayout.widget.ConstraintLayout>